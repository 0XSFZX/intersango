== orderbook ==
CREATE TABLE orderbook (
    uid INT UNSIGNED NOT NULL,
    amount BIGINT UNSIGNED NOT NULL,
    type VARCHAR(6) NOT NULL
    want_amount BIGINT UNSIGNED NOT NULL,
    want_type VARCHAR(6) NOT NULL
);
CREATE TABLE orderbook(uid INT UNSIGNED NOT NULL, amount BIGINT UNSIGNED NOT NULL, type VARCHAR(6) NOT NULL, want_amount BIGINT UNSIGNED NOT NULL, want_type VARCHAR(6) NOT NULL);

== purses ==
CREATE TABLE purses (
    uid INT UNSIGNED NOT NULL,
    amount BIGINT UNSIGNED NOT NULL,
    type VARCHAR(6) NOT NULL
);
CREATE TABLE purses(uid INT UNSIGNED NOT NULL, amount BIGINT UNSIGNED NOT NULL, type VARCHAR(6) NOT NULL);

== user profile ==
CREATE TABLE users (
    uid INT UNSIGNED NOT NULL AUTO_INCREMENT,
    PRIMARY KEY(uid),
    oidlogin VARCHAR(100) NOT NULL,
    verified BOOL NOT NULL DEFAULT FALSE
);
CREATE TABLE users(uid INT UNSIGNED NOT NULL AUTO_INCREMENT, PRIMARY KEY(uid), oidlogin VARCHAR(100) NOT NULL, verified BOOL NOT NULL DEFAULT FALSE);

